{
  "manifest_version": 3,
  "name": "Pink Workspace",
  "version": "1.0",
  "description": "Transform your browser into a pink workspace.",
  "theme": {
    "images": {
      "theme_tab_background": "images/tab_background.png",
      "theme_ntp_background": "images/ntp_background.png"
    },
    "colors": {
      "frame": [244, 201, 222],
      "frame_inactive": [180, 179, 180],
      "toolbar": [244, 201, 222],
      "tab_text": [87, 85, 86],
      "tab_background_text": [77, 76, 76],
      "omnibox_text": [87, 85, 86],
      "omnibox_background": [240, 180, 210],
      "bookmark_text": [87, 85, 86],
      "button_background": [87, 85, 86],
      "folder": [122, 120, 121]
    }
  },
  "icons": {
    "128": "images/icon_128.png",
    "48": "images/icon_48.png",
    "16": "images/icon_16.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon_16.png",
      "48": "images/icon_48.png",
      "128": "images/icon_128.png"
    },
    "default_title": "Pink Workspace",
    "default_popup": "popup.html"
  },
  "permissions": ["storage"]
}
